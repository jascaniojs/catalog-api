{
  "name": "catalog-api",
  "version": "1.0.0",
  "description": "Serverless catalog management system with NestJS and AWS",
  "main": "dist/lambda.js",
  "scripts": {
    "build": "nest build",
    "build:lambda": "nest build --webpack --webpackPath webpack.config.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles",
    "db:create": "ts-node -r dotenv/config --project tsconfig.scripts.json scripts/create-dynamodb-table.ts dotenv_config_path=.env.local",
    "db:create:users": "ts-node -r dotenv/config --project tsconfig.scripts.json scripts/create-users-table.ts dotenv_config_path=.env.local",
    "db:seed": "ts-node -r dotenv/config --project tsconfig.scripts.json scripts/seed-users.ts dotenv_config_path=.env.local",
    "db:start": "docker-compose up -d && sleep 2 && npm run db:create && npm run db:create:users",
    "db:stop": "docker-compose down",
    "cdk:build": "npm run build:lambda",
    "cdk:synth": "npm run build:lambda && cdk synth",
    "cdk:diff": "cdk diff",
    "cdk:deploy": "npm run build:lambda && cdk deploy",
    "cdk:destroy": "cdk destroy",
    "cdk:bootstrap": "cdk bootstrap"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.0.0",
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-secrets-manager": "^3.921.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "@codegenie/serverless-express": "^4.12.6",
    "@google/generative-ai": "^0.24.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^11.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dynamodb-local": "^0.0.31",
    "jsonwebtoken": "^9.0.2",
    "openai": "^6.7.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/aws-lambda": "^8.10.157",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.24",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "aws-cdk-lib": "^2.221.1",
    "constructs": "^10.4.2",
    "dotenv": "^17.2.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "private": true
}
